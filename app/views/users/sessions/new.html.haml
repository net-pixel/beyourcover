= render 'layouts/navbar'
.space
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .user-form
    .user-form__field
      %h2.body_head ログイン画面
      .user-form__field__box
        .user-form__field__box__group
          .user-form__field__box__group__head
            %label
              会員登録がお済みでない方はこちら
        = render "users/shared/links"
      .head
      .user-form__field__box
        .user-form__field__box__group
          .user-form__field__box__group__head
            %label
              メールアドレス
            - if @user.errors.any?
              %span.err_message
                =  @user.errors.full_messages_for(:email).shift
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "user-form__field__box__group__form", placeholder: "PC・携帯どちらでも可"
        .user-form__field__box__group
          .user-form__field__box__group__head
            %label
              パスワード
            - if @user.errors.any?
              %span.err_message
                =  @user.errors.full_messages_for(:password).shift
            = f.password_field :password, autofocus: true, autocomplete: "current-password", class: "user-form__field__box__group__form", placeholder: "７文字以上の半角英数字"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .user-form__field__box__group
          .user-form__field__box__group__head
        = f.submit "ログイン", class: 'btn-default btn-sns'
        .user-form__field__box__group
          .user-form__field__box__group__head
        = link_to "#", method: :post do
          %button#google-login.btn-default.btn-sns.btn-sns-google
            %i.fab.fa-google
            Googleでログインする
        = link_to "#", method: :post do
          %button#facebook-login.btn-default.btn-sns.btn-sns-facebook
            %i.fab.fa-facebook
            Facebookでログインする